<h3>Memo List</h3>

<% @memos.each do |memo|%>
    <div class="grid">
        <div class="col-md-4">
            <div class="list-group">
                <div class="list-group-item list-group-item-primary">
                <%= memo.title %>
                <p><%= memo.category.name %></p>
                    <div class="buttons">
                        <a href="/memos/<%= memo.id %>" >削除</a> 
                        <a href="/memos/<%= memo.id %>/edit" >編集</a>
                    </div>
                </div>
                <div class="list-group-item list-group-item-default"><%= memo.body %></div>
            </div>
        </div>
    </div>
<% end %>









